    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/mastacrss/bin/Debug/net7.0/mastacrss.dll",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "ConfigPath": "${workspaceFolder}/local.yml"
            },
            "envFile": "${workspaceFolder}/.env",
        },
        {
            "name": "test",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/mastacrss/bin/Debug/net7.0/mastacrss.dll",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "ConfigPath": "${workspaceFolder}/local.yml"
            },
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "test",
                "--uri",
                "${input:uri}",
            ]
        },
        {
            "name": "setup",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/mastacrss/bin/Debug/net7.0/mastacrss.dll",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "ConfigPath": "${workspaceFolder}/local.yml"
            },
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "setup",
                "--uri",
                "${input:uri}",
                "--access-token",
                "${input:access-token}",
            ]
        },
        {
            "name": "setup-all",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/mastacrss/bin/Debug/net7.0/mastacrss.dll",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "ConfigPath": "${workspaceFolder}/local.yml"
            },
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "setup-all",
            ]
        },
        {
            "name": "config-test",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/mastacrss/bin/Debug/net7.0/mastacrss.dll",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "ConfigPath": "${workspaceFolder}/local.yml"
            },
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "config-test",
            ]
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "uri",
            "description": "RSSのURLを入力してください。",
        },
        {
            "type": "promptString",
            "id": "access-token",
            "description": "アクセストークンを入力してください。",
        }
    ],
}